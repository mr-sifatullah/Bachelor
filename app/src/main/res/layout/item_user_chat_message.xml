<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:padding="8dp">

    <TextView
        android:id="@+id/userMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/right_message_background"
        android:padding="16dp"
        android:text="Lorem ipsum dolor sit adfasd asdfasdfasdf asdfasdfadsfamet dumm"
        android:textColor="@color/gray_custom"
        android:textSize="12sp"
        android:textAlignment="textStart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="16dp"
        android:layout_gravity="end"
        android:gravity="end">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            tools:text="Sifat"
            android:textColor="@color/colorPrimary"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/userMsgDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sep 13 at 10:30 AM"
            android:textColor="@color/black_80"
            android:textSize="9sp" />

    </LinearLayout>

</LinearLayout>

