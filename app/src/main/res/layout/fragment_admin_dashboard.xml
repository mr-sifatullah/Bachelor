<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMealCounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Counts"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMealCounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvBazarList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bazar List"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBazarList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvExtraBazarList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extra Bazar List"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewExtraBazarList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvMealRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Rate: "
        android:textSize="20sp"
        android:layout_marginTop="20dp" />


</LinearLayout>